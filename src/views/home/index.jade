md-content.background(layout="column" flex)
  md-toolbar(md-theme="home")
    include ../navbar/index
  md-content(
    layout="column"
    layout-padding
    md-scroll-y
    layout-align="start center"
  )
    h1.title.md-headline OJInf | 创造无限可能
    img.title(src="/images/infinite.svg" width="256px")
    div(layout="row" layout-align="center" layout-wrap)
      md-button.md-raised.md-primary.block(ng-href="#/problem") 
        md-icon code
        span {{'SIDEBAR_PROBLEM'|translate}}
      md-button.md-raised.md-primary.block(ng-href="#/problem") 
        md-icon today
        span {{'SIDEBAR_CONTEST'|translate}}
      md-button.md-raised.block(ng-href="#/problem") 
        md-icon open_in_new
        span {{'SIDEBAR_REGISTER'|translate}}
      md-button.md-raised.block(ng-href="#/problem") 
        md-icon exit_to_app
        span {{'SIDEBAR_LOGIN'|translate}}
